{
  "name": "loadout",
  "version": "0.1.0",
  "description": "MCP server that bridges the Agent Skills spec to any MCP-compatible agent. Discover, search, and manage skills through standardized MCP primitives.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "loadout": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "bundle": "npm run build && tsx scripts/bundle.ts",
    "bundle:list": "tsx scripts/bundle.ts --list"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "gray-matter": "^4.0.3",
    "unified": "^11.0.0",
    "remark-parse": "^11.0.0",
    "mdast-util-to-string": "^4.0.0",
    "github-slugger": "^2.0.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0"
  }
}
